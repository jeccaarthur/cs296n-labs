@model QuizVM
@{
    ViewData["Title"] = "Quiz";
}

@{
    QuizVM questions = new QuizVM();
} 

<div class="text-center">
    <h1 class="display-4">Test Your Knowledge</h1>
    <p>Take the quiz below to see how well you know Winterfell.</p>
</div>

<form method="post" class="container">

    <label asp-for="answer1" class="control-label">What is the sigil of House Stark?</label>
    <input asp-for="answer1" type="text" class="form-control pb-1" />
    <p>@Model?.result1</p>

    <br />

    <label asp-for="answer2">What is the Stark family motto?</label>
    <input asp-for="answer2" type="text" class="form-control pb-1" />
    <p>@Model?.result2</p>

    <br />

    <p class="row">Ned Stark was the King of the North.</p>
    <div class="row">
        <label for="true" class="col-1">True</label>
        <input asp-for="answer3" id="true" type="radio" value="true" class="input-control col-1" />
    </div>
    <div class="row">
        <label for="false" class="col-1">False</label>
        <input asp-for="answer3" id="false" type="radio" value="false" class="input-control col-1" />
    </div>
    <p>@Model?.result3</p>

    <br />
    <input type="submit" class="form-control btn btn-info" />
</form>