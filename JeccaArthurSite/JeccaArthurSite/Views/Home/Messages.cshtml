@* specify model type *@
@model List<Message>

@{
    ViewData["Title"] = "Messages";
}

<h1 class="display-4">Filter Messages</h1>
Enter sender name or date:
<form method="post" class="container">
    <div class="row p-2">
        <label for="senderName" class="control-label col-md-1">Sender Name</label>
        <input name="senderName" class="form-control col-md-6" />
    </div>
    <div class="row p-2">
        <label for="inputDate" class="control-label col-md-1">Date</label>
        <input name="inputDate" class="form-control col-md-6" />
    </div>
    <div class="row p-2">
        <button type="submit" class="form-control btn btn-success col-2">Submit</button>
        <a asp-action="Messages" class="btn btn-secondary col-3">Reset</a>
    </div>
</form>

<h1 class="display-4">
    Messages
</h1>

@foreach (Message m in Model)
{
    <div class="mx-auto p-5">
        <div class="card card-body mx-auto py-3">
            <div class="container messageOutput">
                <div class="row text-center">
                    <h2>@m.Subject</h2>
                </div>
                <div class="row p-2"><span class="mr-2"><strong>Sender: </strong></span>@m.Sender.Name</div>
                <div class="row p-2"><span class="mr-2"><strong>Recipient: </strong></span>@m.Recipient.Name</div>
                <div class="row p-2"><span class="mr-2"><strong>Subject: </strong></span>@m.Subject</div>
                <div class="row p-2"><span class="mr-2"><strong>Message: </strong></span>@m.Body</div>
                <div class="row p-2"><span class="mr-2"><strong>Date: </strong></span>@m.Date</div>
                <br />
            </div>
        </div>
    </div>
}