@model ReplyVM
@{
    ViewData["Title"] = "Reply";
}

<div class="text-center">
    <h1>Write a Reply</h1>
</div>



<!-- FORM -->
<div class="container">
    <div class="form-container mx-auto">
        <div class="card-body">
            <form method="post" class="p-5">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group form-card p-5">

                    <div class="row p-3">
                        <label for="reply" asp-for="ReplyText">Reply:  &nbsp;&nbsp;</label><br />
                        <textarea id="reply" rows="5" class="form-control col-md-6" asp-for="ReplyText" placeholder="Write your reply here..."></textarea>
                        <span class="text-danger" asp-validation-for="ReplyText"></span>
                    </div>
                    <br>

                    <div class="row text-center">
                        <button type="submit" class="btn btn-lg btn-success mx-auto px-5 flyButton">Submit</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- END FORM -->